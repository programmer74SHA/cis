input{\n  kafka{\n      id => \"kafka_out_netflow\"\n      client_id => \"out_netflow\"\n      bootstrap_servers => \"localhost:9094\"\n      auto_offset_reset => \"earliest\"\n      partition_assignment_strategy  => \"sticky\"\n      topics => \"in_netflow\"\n      consumer_threads => 2\n      codec => \"json\"\n      add_field => { \"kafka_topic\" => \"in_netflow\" }\n  }\n}\n\nfilter {\n\tif [event][original] and [message] {\n\t\tmutate {\n\t\t\tremove_field => [\"[event][original]\"]\n\t\t}\n\t}\n\tmutate {\n\t\tadd_field => {\n\t\t\t\"[data_source][name]\" => \"netflow\"\n\t\t\t\"[enrich_activator]\" => false\n\t\t}\n\t}\n\tif [enrich_activator] {\n\t\tmutate {\n\t\t\tadd_field => {\n\t\t\t\t\"[ioc][ip]\" => false\n\t\t\t\t\"[enrich][network_direction]\" => false\n\t\t\t\t\"[enrich][geo]\" => false\n\t\t\t\t\"[enrich][top_1m]\" => false\n\t\t\t\t\"[enrich][commiunity_id]\" => false\n\t\t\t}\n\t\t}\n\t}\n\telse {}\n}\n\noutput{\n  elasticsearch {\n    hosts => [{% for host in groups['SF'] %}\"https://{{ hostvars[host]['ansible_host'] }}:9200\"{% if not loop.last %},{% endif %}{% endfor %}]\n    api_key => \"{{ logstash_api_key }}\"\n    data_stream => true\n    ssl => true\n    ssl_certificate_verification => false\n  }\n}