input{\n  kafka{\n      id => \"kafka_out_vsphere\"\n      client_id => \"out_vsphere\"\n      bootstrap_servers => \"localhost:9094\"\n      auto_offset_reset => \"earliest\"\n      partition_assignment_strategy  => \"sticky\"\n      topics => \"in_vsphere\"\n      consumer_threads => 2\n      codec => \"json\"\n      add_field => { \"kafka_topic\" => \"in_vsphere\" }\n  }\n}\n\nfilter {\n\tif [event][original] and [message] {\n\t\tmutate {\n\t\t\tremove_field => [\"[event][original]\"]\n\t\t}\n\t}\n  \t# Do not activate below line\n\t#if [message] { fingerprint { source => [\"message\"] method => \"MD5\" key => \"${HMAC_SALT:APKS!em}\" target => \"event.hash\" } }\n\t\n\tmutate {\n\t\tadd_field => {\n\t\t\t\"[data_source][name]\" => \"vsphere\"\n\t\t}\n\t}\n}\n\noutput{\n  elasticsearch {\n    hosts => [{% for host in groups['SF'] %}\"https://{{ hostvars[host]['ansible_host'] }}:9200\"{% if not loop.last %},{% endif %}{% endfor %}]\n    api_key => \"{{ logstash_api_key }}\"\n    data_stream => true\n    ssl => true\n    ssl_certificate_verification => false\n  }\n}\n\n