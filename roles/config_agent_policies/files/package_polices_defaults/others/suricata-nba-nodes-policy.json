{
  "id": "suricata-nba-nodes-policy",
  "name": "suricata (nba-nodes-policy)",
  "namespace": "",
  "policy_id": "nba-nodes-policy",
  "enabled": true,
  "package": {
    "name": "suricata",
    "version": ""
  },
  "inputs": [
    {
      "type": "logfile",
      "policy_template": "suricata",
      "enabled": true,
      "streams": [
        {
          "enabled": true,
          "data_stream": {
            "type": "logs",
            "dataset": "suricata.eve"
          },
          "vars": {
            "paths": {
              "type": "text",
              "value": [
                "/var/log/suricata/eve.json",
                "/var/log/suricata/eve-*.json"
              ]
            },
            "tags": {
              "value": [
                "forwarded",
                "suricata-eve"
              ],
              "type": "text"
            },
            "preserve_original_event": {
              "value": false,
              "type": "bool"
            },
            "processors": {
              "type": "yaml"
            }
          },
          "compiled_stream": {
            "paths": [
              "/var/log/suricata/eve.json",
              "/var/log/suricata/eve-*.json"
            ],
            "exclude_files": [
              """\.gz$"""
            ],
            "tags": [
              "forwarded",
              "suricata-eve"
            ],
            "publisher_pipeline.disable_host": true,
            "processors": [
              {
                "add_observer_metadata": null
              }
            ]
          }
        }
      ]
    }
  ]
}