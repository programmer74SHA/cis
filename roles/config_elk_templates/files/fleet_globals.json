{
  "template": {
    "mappings": {
      "_meta": {
        "managed_by": "fleet",
        "managed": true
      },
      "date_detection": false,
      "dynamic_templates": [
        {
          "strings_as_keyword": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {
        "data_source": {
          "type": "object",
          "properties": {
            "name": {
              "type": "keyword"
            }
          }
        },
        "event": {
          "type": "object",
          "properties": {
            "message": {
              "type": "keyword"
            },
            "original": {
              "type": "keyword",
              "fields": {
                "text": {
                  "type": "match_only_text"
                }
              }
            }
          }
        },
        "kafka_topic": {
          "type": "keyword"
        },
        "message": {
          "type": "match_only_text",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "sensor": {
          "type": "object",
          "properties": {
            "ip": {
              "type": "ip"
            }
          }
        }
      }
    }
  },
  "_meta": {
    "managed_by": "fleet",
    "managed": true
  }
}